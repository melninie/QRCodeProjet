<!doctype html>
<html>
    <head>
        <title>Creation Matière</title>
        <% include ../layout %>
    </head>
    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">

                <h1><span class="fa fa-sign-in"></span> Creation Matière</h1>

                <form action="/<%= chemin %>" method="post">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" name="nom">
                    </div>
                    <div class="form-group">
                        <label>Promotion</label>
                        <select name="promo">
                            <% for(var i=0; i<promos.length; i++) {%>
                            <option value="<%=promos[i].idP%>"><%=promos[i].nomP%></option>
                            <% } %>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">Create</button>
                </form>
            </div>
        </div>
    </body>
</html>
