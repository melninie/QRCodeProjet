<!doctype html>
<html>
    <head>
        <title>Matières</title>
        <% include ../layout %>
    </head>
    <body>
        <% include ../Menu %>

        <div class="container">
            <span class="pull-left"><h1 class="pull-left">Matières :</h1></span>
            <% if(promos.length != 0) { %>
                <span class="pull-right"><a href="/<%= chemin %>create"><h1><img class="iconsAction" src="/files/IconeAjouter.png"></h1></a></span>
            <% } %>
        </div>
        <div class="container" id="MainMenu">
            <div class="list-group panel">
                <% if (promos.length !=0) { %>
                    <% for(var i=0; i<=promos.length-1; i++) { %>
                        <a href="#promos<%=promos[i].idP %>" class="list-group-item " data-toggle="collapse" data-parent="#MainMenu"><strong><%= promos[i].nomP %></strong></a>
                        <div class="collapse" id="promos<%=promos[i].idP %>">
                            <% if(matieres.length !=0) {
                                var x = 0;
                                for(var j=0; j<=matieres.length-1; j++) {
                                    if(matieres[j].promotionS == promos[i].idP) {
                                        x=1; %>
                                        <div class="list-group-item">
                                            <div class="container">
                                                <div class="col-md-9">
                                                    <div><strong><%=(matieres[j].nomM.toUpperCase())%></strong></div>
                                                </div>
                                                <div class="col-md-2">
                                                    <span class="pull-right"><a href="/<%= chemin %>" onclick="confirmBeforeDelete('<%= matieres[j].idM %>', '<%= chemin %>')"><img class="iconsAction" src="/files/IconePoubelle.png"></a></span>
                                                    <span class="pull-right"><a href="/<%= chemin %><%= matieres[j].idM %>"><img class="iconsAction" src="/files/IconeEdit.png"></a></span>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                <% } %>

                                <% if(x==0) {
                                    x=1; %>
                                    <div class="list-group-item">
                                        <div class="container">
                                            <div class="col-md-12">
                                                <div>Il n'y a pas de matières pour cette promotion.</div>
                                            </div>
                                        </div>
                                    </div>
                                 <% } %>
                            <% } else { %>
                                <div class="list-group-item">
                                    <div class="container">
                                        <div class="col-md-9">
                                            <div><strong>Il n'y a pas de matières pour cette promotion.</strong></div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="list-group-item">
                        <div class="container">
                            <div class="col-md-9">
                                <div><strong>Veuillez créer des promotions avant de créer des Matières. Merci.</strong></div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </body>
</html>