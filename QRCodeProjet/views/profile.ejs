<!doctype html>
<html>
<head>
	<title>Profil</title>
    <% include layout%>
</head>
<body>
<div class="container">

	<div class="text-center">
		<h1>Profil</h1>
	</div>

	<div class="row">
        <% if (user.roleU == "ETUDIANT"){ %>
        	<% include Menus/MenuEtudiant %>
        <% } else if (user.roleU == "ENSEIGNANT"){ %>
        	<% include Menus/MenuEnseignant %>
        <% } else { %>
        	<% include Menu %>
        <% } %>

		<div class="col-sm-4">
			<div align="center">
				<img src="/files/imgProfileUsers/<%= user.imageProfileU %>" style="width:50%"></img><br>
			</div>
		</div>
		<div class="col-sm-8">
			<div class="well">
				<h3><span class="fa fa-user"></span> </h3>
				<p>
					<strong>Nom</strong>: <%= user.nomU %><br>
					<br>
					<strong>Pr√©nom</strong>: <%= user.prenomU %><br>
					<% if (user.roleU == "ETUDIANT"){ %>
						<strong>Promo</strong>: <%= user.promotionU %>
                    <% } %>
				</p>
			</div>
		</div>
	</div>

</div>
</body>
</html>
