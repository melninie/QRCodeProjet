<!doctype html>
<html>
    <head>
        <title>Creation Utilisateur</title>
        <% include layout %>
    </head>
    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">

                <h1><span class="fa fa-sign-in"></span> Signup</h1>

                <form action="/admin/users" method="post">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" name="nom" value="<%=(user[0].nomU.toUpperCase())%>">
                    </div>
                    <div class="form-group">
                        <label>Pr√©nom</label>
                        <input type="text" class="form-control" name="prenom" value="<%=(user[0].prenomU)%>">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" class="form-control" name="mail" value="<%=(user[0].mailU)%>">
                    </div>
                    <div class="form-group">
                        <label>Promotion</label>
                        <select name="promotion">
                            <% for(var i=0; i<promos.length; i++) {%>
                            <option value="<%=promos[i].idP%>" <%=promos[i].nomP%></option>
                            <% } %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Create</button>
                </form>
            </div>
        </div>
    </body>
</html>
