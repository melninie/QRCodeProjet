<!doctype html>
<html>
<head>
    <title>DÃ©tail Seance</title>
    <% include layout %>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span>Formulaire de modification</h1>

            <form id="form">
                <div class="form-group">
                    <label>Nom</label>
                    <input type="text" class="form-control" name="nom" value="<%=(seance[0].nomS.toUpperCase())%>">
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" class="form-control" name="date" value="<%=(seance[0].dateS)%>">
                </div>
                <div class="form-group">
                    <label>Heure Debut</label>
                    <input type="time" class="form-control" name="hDebut" value="<%=(seance[0].heureDebut)%>">
                </div>
                <div class="form-group">
                    <label>Heure Fin</label>
                    <input type="time" class="form-control" name="hFin" value="<%=(seance[0].heureFin)%>">
                </div>
                <div class="form-group">
                    <label>Matiere</label>
                    <select name="matiere">
                        <% for(var i=0; i<matieres.length; i++) {%>
                            <option value="<%=matieres[i].idM%>" <% if(matieres[i].idM==seance[0].matiereS) { %> selected="selected" <% } %> ><%=matieres[i].nomM%></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Enseignant</label>
                    <select name="user">
                        <% for(var i=0; i<enseignants.length; i++) {%>
                            <option value="<%=enseignants[i].id%>" <% if(enseignants[i].id==seance[0].userS) { %> selected="selected" <% } %> ><%=enseignants[i].nomU%></option>
                        <% } %>
                    </select>
                </div>

                <div class="pull-right">
                    <a href="/admin/seances" class="btn btn-secondary btn-lg">Annuler</a>
                    <a href="/admin/seances" class="btn btn-primary btn-lg" onclick="modifyItem('<%= seance[0].idS %>', '<%= chemin %>')">Appliquer</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

