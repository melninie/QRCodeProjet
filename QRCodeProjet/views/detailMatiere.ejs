<!doctype html>
<html>
<head>
    <title>Détail Matière</title>
    <% include layout %>
</head>

<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span>Formulaire de modification</h1>

            <form id="form">
                <div class="form-group">
                    <label>Nom</label>
                    <input type="text" class="form-control" name="nom" value="<%=(matieres[0].nomM.toUpperCase())%>">
                </div>
                <div class="form-group">
                    <label>Promotion</label>
                    <select name="promo">
                        <% for(var i=0; i<promos.length; i++) {%>
                            <option value="<%=promos[i].idP%>" <% if(promos[i].id==matieres[0].promotionS) { %> selected="selected" <% } %> ><%=promos[i].nomP%></option>
                        <% } %>
                    </select>
                </div>

                <div class="pull-right">
                    <a href="/admin/matieres" class="btn btn-secondary btn-lg">Annuler</a>
                    <a href="/admin/matieres" class="btn btn-primary btn-lg" onclick="modifyItem('<%= matieres[0].idM %>', '<%= chemin %>')">Appliquer</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

